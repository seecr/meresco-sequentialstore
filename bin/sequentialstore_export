from seecrdeps import includeParentAndDeps  #DO_NOT_DISTRIBUTE
includeParentAndDeps(__file__)              #DO_NOT_DISTRIBUTE

from sys import argv, stdout

from meresco.sequentialstore import SequentialStorage, Export


def main():
    if len(argv) != 3:
        print 'Usage: %s <store directory> <export path>' % argv[0]
        exit(1)

    directory, exportPath = argv[1:]
    s = SequentialStorage(directory)
    total = len(s)
    with Export(exportPath, 'w') as export:
        for i, (identifier, data) in enumerate(s.iteritems()):
            if i % 1000 == 0:
                print 'exporting item %s (%s%%)' % (i, (i * 100 / total))
                stdout.flush()
            export.write(identifier, data)
    s.close()

if __name__ == '__main__':
    main()
